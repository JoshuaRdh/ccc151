#studentsBtn {
    border: none;
    background-color: #2a5ea1;
    font-weight: bold;
    color: white;
}

#programsBtn {
    border: none;
    background-color: #f25f5c;
    font-weight: bold;
    color: white;
}

#collegesBtn {
    border: none;
    background-color: #70c1b3;
    font-weight: bold;
    color: white;
}

#studentPressed {
    border: none;
    font-weight: bold;
    color: white;
    background: qlineargradient(
        spread: pad,
        x1: 0,
        y1: 0,
        x2: 1,
        y2: 0,
        stop: 0 #2a5ea1,
        stop: 0.95 #2a5ea1,
        stop: 1 #205295
    );
}

#programPressed {
    border: none;
    font-weight: bold;
    color: white;
    background: qlineargradient(
        spread: pad,
        x1: 0,
        y1: 0,
        x2: 1,
        y2: 0,
        stop: 0 #c44e4c,
        stop: 0.04 #f25f5c stop: 0.96 #f25f5c stop: 1 #c44e4c
    );
}

#collegePressed {
    border: none;
    font-weight: bold;
    color: white;
    background: qlineargradient(
        spread: pad,
        x1: 1,
        y1: 0,
        x2: 0,
        y2: 0,
        stop: 0 #70c1b3,
        stop: 0.98 #70c1b3 stop: 1 #5ea398
    );
}

/* Header Styles  ----------------------------- */

#studentsHeader {
    background-color: #144272;
}

#programsHeader {
    background-color: #c44e4c;
}

#collegesHeader {
    background-color: #5ea398;
}

#headerLabel {
    font-weight: bold;
    font-size: 32px;
    color: white;
}

#headerAddBtn {
    margin-left: 16px;
    padding-left: 8px;
    padding-right: 8px;
    background-color: transparent;
    border: none;
}

/* studentQueryBar and Details comboBox-----------------------------*/

#studentQueryBar {
    padding-left: 10px;
    padding-right: 10px;
    background: qlineargradient(
        spread: pad,
        x1: 0,
        y1: 1,
        x2: 0,
        y2: 0,
        stop: 0 white,
        stop: 0.92 white,
        stop: 1 #0e2747
    );
}

#studentQueryBar QPushButton {
    background-color: white;
    color: #144272;
}

#studentQueryBar > QLineEdit {
    padding-left: 5px;
    background-color: white;
    color: #144272;
    border: 1px solid #144272;
    border-radius: 8px;
}

#studentQueryBar > QLabel {
    background: transparent;
    color: #144272;
}
/* comboBox */
#studentQueryBar QComboBox,
#studentDetailsEdit QComboBox {
    background-color: white;
    color: #144272;
    border: 1px solid #144272;
    padding-left: 8px;
    padding-right: 8px;

    selection-background-color: #144272;
    selection-color: white;
}
#studentQueryBar QComboBox::drop-down,
#studentDetailsEdit QComboBox::drop-down {
    width: 16px;
    height: 20px;
    border-left: 1px solid #144272;
}
#studentQueryBar QComboBox::down-arrow,
#studentDetailsEdit QComboBox::down-arrow {
    image: url(assets/arrowDropDown.svg);
    width: 20px;
    height: 20px;
}

#studentQueryBar QComboBox QListView,
#studentDetailsEdit QComboBox QListView {
    background-color: white;
}

