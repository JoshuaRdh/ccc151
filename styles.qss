/* form dialog ------ */
#formDialog {
    background-color: #86c589;
}
#formDialog QPushButton {
    background-color: white;
    color: #4e7450;
    border: 1px solid #4e7450;
    padding-left: 3px;
    padding-right: 3px;
    border-radius: 5px;
}
#formDialog QPushButton:hover {
    background-color: #4e7450;
    color: white;
    border: 1px solid #4e7450;
    padding-left: 3px;
    padding-right: 3px;
    border-radius: 5px;
}
#formDialog * {
    background-color: white;
    color: #4e7450;
    border: none;
    padding: 3px;
    border-radius: 5px;
}

#formDialog QComboBox {
    background-color: white;
    color: #4e7450;
    border: 1px solid #86c589;
    padding-left: 8px;
    padding-right: 8px;

    selection-background-color: #86c589;
    selection-color: white;
}
#formDialog QComboBox::drop-down {
    width: 16px;
    height: 20px;
    border-left: 1px solid #86c589;
}
#formDialog QComboBox::down-arrow {
    image: url(assets/arrowDropDown.svg);
    width: 20px;
    height: 20px;
}

#formDialog QComboBox QListView {
    background-color: white;
}

